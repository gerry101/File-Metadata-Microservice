<% include ./partials/header %>

<div class="container">
    <div class="text-center">
        <h3 class="display-3 text-muted">File Metadata Microservice</h3>
        <h5 class="display-4">by Gerry with <a href="https://www.freecodecamp.com/" target="_blank"> Free Code Camp</a></h5>
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4 my-5">
                <form action="/upload" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="file">File input</label>
                        <input type="file" class="form-control-file" id="file" name="file" aria-describedby="fileHelp">
                        <small id="file" class="form-text text-muted">Select a file to submit.</small>
                    </div>
                    <button type="submit">Submit</button>
                </form>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>
</div>

<% include ./partials/footer %>